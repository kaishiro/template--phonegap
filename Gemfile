# RubyGems - Source
source "https://rubygems.org"

# Ruby - Version
ruby "2.1.2"

# Middleman - The man
gem "middleman-core", "~>3.3"

# Middleman Livereload - Auto-refresh on change
gem "middleman-livereload", "~>3.3"

# Middleman S3 Sync - Allows sync between middleman build and Amazon S3
gem "middleman-s3_sync", "~>3.0"

# Middleman Pagination - Allows pagination for proxy pages
gem "middleman-pagination", "~>1.1"

# SASS - Syntactically Awesome Stylesheets Yo
gem "sass", "~>3.3"

# Puma - Server for local and Heroku deployment 
gem "puma", "~>2.8"

# Redcarpet - Alternative markdown processor 
gem "redcarpet", "~>3.1"

# Prismic.io - Developer kit
gem "prismic.io"

# Kramdown - Markdown processor
gem "kramdown", "~> 1.4.0"

# Uglifier - JavaScript minifier
gem "uglifier", "~> 2.5.1"
